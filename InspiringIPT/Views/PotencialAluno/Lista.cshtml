@model IEnumerable<InspiringIPT.Models.PotencialAluno>


<div class="row">
    <div class="col-sm-14" style="background-color:lavenderblush;">
        <h2 class="page-header">@ViewBag.Title <small> Lista de Potenciais Alunos <i class="glyphicon glyphicon-education"></i></small></h2>
    </div>
    <div class="col-sm-14" style="background-color:lavender;">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NomeCompleto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Concelho)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contacto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataNascimento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HabAcademicas)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Curso.NomeCurso)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoC.Tipo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Area.NomeArea)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataInscricao)
                </th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeCompleto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Concelho)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contacto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataNascimento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HabAcademicas)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Curso.NomeCurso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoC.Tipo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Area.NomeArea)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataInscricao)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.AlunoID }, new { @class = "btn btn-warning", @style = "height:30px;width:80px" })
                        @Html.ActionLink("Detalhes", "Details", new { id = item.AlunoID }, new { @class = "btn btn-info", @style = "height:30px;width:80px" })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>