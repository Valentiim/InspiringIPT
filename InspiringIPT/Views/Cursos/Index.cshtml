@model IEnumerable<InspiringIPT.Models.Cursos>

@{
    ViewBag.Title = "Os nossos Cursos";
}
@if (TempData["AQSuccess"] != null)
{
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header modal-header-success">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">@TempData["AQ"]</h4>
                </div>
                <div class="modal-body">
                    <p>@TempData["AQSuccess"]</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
}


<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">@ViewBag.Title <small>Inspiring IPTomar</small></h2>
    </div>
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TipoCurso)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Curso)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImagePath)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoCurso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Curso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ImagePath)
                    </td>
                    <td>
                        @Html.ActionLink("Alterar", "Edit", new { id = item.CursoID }) |
                        @Html.ActionLink("Detalhes", "Details", new { id = item.CursoID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.CursoID })
                        @Html.ActionLink("Acrescentar Curso", "Create", new { id = item.CursoID })
                    </td>
                </tr>
            }

        </table>
        </div>
    </div>
