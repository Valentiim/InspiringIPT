@model InspiringIPT.Models.Inscricao

@{
    ViewBag.Title = "Inscrever";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Inscricao</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.DataInscricao, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class='input-group date' id='datetimepicker1'>
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
                @Html.TextBoxFor(m => m.DataInscricao, new
           {
               @class = "form-control input-group-addon col-md-8",
               @id = "datetimepicker1",
           })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.CursoFK, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-10">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon glyphicon-map-marker"></i>
                    </span>
                    @Html.DropDownList("CursoFK", null, "Escolha uma opção", htmlAttributes: new { @class = "form-control col-md-8" })
                </div>
                @Html.ValidationMessageFor(m => m.CursoFK, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-4">
                <input type="submit" value="Inscrever" class="btn btn-success" />
                @Html.ActionLink("Ver Inscrições", "Index", "", new { @class = "btn btn-primary" })
            </div>
        </div>
        }
    </div>
    

