@model InspiringIPT.Models.Inscricao

@{
    ViewBag.Title = "Alterar inscrição";
}
<div class="row">
    <div class="col-md-6" style="text-align:justify">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.DataInscricao)

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.InscricaoID)
                @Html.HiddenFor(model => model.DataInscricao)
                @Html.HiddenFor(model => model.AlunoFK)
                <div class="container">

                    <div class="form-group">
                        @Html.LabelFor(model => model.DataInscricao, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class='input-group date' id='datetimepicker1'>
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                            @Html.EditorFor(model => model.DataInscricao, new { htmlAttributes = new { @class = "form-control input-group-addon col-md-8", @id = "datetimepicker1" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CursoFK, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-map-marker"></i>
                            </span>
                            @Html.DropDownList("CursoFK", null, "Escolhe o curso", htmlAttributes: new { @class = "form-control col-md-8" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-4">
                    <input type="submit" value="Alterar inscrição" class="btn btn-success" />
                    @Html.ActionLink("Ver inscrições", "Index", "", new { @class = "btn btn-primary" })
                </div>
            </div>
        }
    </div>   
</div>



