@model InspiringIPT.Models.Inscricao

@{
    ViewBag.Title = "Consultar Inscrição";
}

<div class="row">
    <br>
    <div class="col-md-6" style="text-align:justify">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="container">
                    <div class="form-group">
                        @Html.LabelFor(model => model.DataInscricao, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class='input-group date' id='datetimepicker1'>
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                            @Html.TextBoxFor(m => m.DataInscricao, new
                   {
                       @class = "form-control input-group-addon col-md-8",
                       @id = "datetimepicker1",
                   })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CursoFK, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-education"></i>
                            </span>
                            @Html.DropDownList("CursoFK", null, "Escolhe o curso", htmlAttributes: new { @class = "form-control col-md-8" })
                        </div>
                        @Html.ValidationMessageFor(m => m.CursoFK, "", new { @class = "text-danger" })
                    </div>

                </div>
            </div>
            <div  class="form-group" >
                <div  class="col-md-offset-4" >
                    
                        <input type="submit" value="Inscrever novo aluno" class="btn btn-success" />
                        @Html.ActionLink("Consultar alunos inscritos", "Index", "", new { @class = "btn btn-primary" })
                 
                </div>            
            </div>   
        }
    </div>
</div>
