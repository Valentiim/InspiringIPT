@model InspiringIPT.Models.Inscricao

@{
    ViewBag.Title = "Detalhes da incrição";
}
<div class="row">
    <div class="col-md-6">

        <h2>Inspiring IPTomar</h2>
        <table>
            <tr>
                <td></td>
                <td>
                    <b>Inscrição</b>
                </td>
            </tr>
            <tr>
                <td>
                    <b>@Html.DisplayNameFor(model => model.DataInscricao): </b>
                </td>
                <td>
                    @Html.DisplayFor(model => model.DataInscricao)
                </td>
            </tr>
            <tr>
            </tr>
            <tr>
                <td>
                    <b>Aluno:</b>
                </td>
                <td>
                    @ViewBag.nome
                </td>
            </tr>
            <tr>
                <td>
                    <b>@Html.DisplayNameFor(model => model.Cursos.Curso): </b>
                </td>
                <td>
                    @ViewBag.curso
                </td>
            </tr>
            <tr>
                <td>
                    <b>@Html.DisplayNameFor(model => model.Cursos.TipoCurso): </b>
                </td>
                <td>
                    @ViewBag.tcurso
                </td>
            </tr>
        </table>

        <br />
        <div class="col-md-offset-2">
            @Html.ActionLink("Alterar Inscrição", "Edit", new { id = Model.InscricaoID }) |
            @Html.ActionLink("Ver inscriçoes", "Index")
        </div>
    </div>
</div>