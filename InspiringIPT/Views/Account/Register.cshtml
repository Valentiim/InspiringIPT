@model InspiringIPT.Models.RegisterViewModel
@{
    ViewBag.Title = "Inscrever";
    ViewBag.Title1 = "Autenticação";
    ViewBag.Title2 = "Dados Pessoais";
}

    <div class="row" style="position:center;">
        @using (Html.BeginForm("Inscrever", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {

            <div class="col-md-6">

                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                @*oculta a secção de inserção do email, password e a confirmação da password para os alunos*@
                @*@if (User.IsInRole("Funcionarios"))
                    {*@
                <br>
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-user"></i>
                            </span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-group" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-lock"></i>
                            </span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-group" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-lock"></i>
                            </span>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-group" })
                        </div>
                    </div>
                </div>
                @*}
                    @*términa aqui*@

            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <div class="col-lg-12">

                            <h4 class="page-header">@ViewBag.Title2</h4>

                        </div>
                        @Html.Partial("~/Views/Alunos/Create.cshtml")
                    </div>

                    <div class="col-md-offset-2" style="margin-top:10px">
                        <input type="submit" value="Inscrever" class="btn btn-success" />
                    </div>


                </div>

            </div>
        }
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
